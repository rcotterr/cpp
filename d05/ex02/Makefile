re:
	rm -rf a.out Bureaucrat.hpp.gch Form.hpp.gch
	clang++ -std=c++98 -Wall -Wextra -Werror Bureaucrat.hpp Bureaucrat.cpp Form.cpp Form.hpp ShrubberyCreationForm.cpp ShrubberyCreationForm.hpp main.cpp